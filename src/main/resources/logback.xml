<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Configuraci贸n del appender para la consola -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>AVISO CONSOLA --> %d{yyyy-MM-dd HH:mm:ss} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Configuraci贸n del appender para el archivo -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>app.log</file>  <!-- Ruta del archivo de log -->
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Configuraci贸n del logger -->
    <logger name="es.israeldelamo.jasperconmaven" level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </logger>

    <!-- Configuraci贸n del root logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>

</configuration>
